.jumbotron
  .container.text-center
    = image_tag("header_logo.png", :alt => "PROTO TYPE - SHARE THE PROTOTYPE", :height => "73px")
.filter-nav
  .container
    .row
      %ul.nav.nav-pills.col-lg-11
        %li{:role => "presentation"}
          =link_to "Popular PROTO", root_path
        %li{:role => "presentation"}
          =link_to "Newest PROTO", newest_prototypes_path
      %button{:type => "button", :class => "btn btn-default col-lg-1"} View Tags
.container.proto-list
  .row
    -@tags.each do |tag|
      .col-sm-4.col-md-3.proto-content
        .thumbnail
          =link_to "#{tag.name}", tag_path(tag.name), style: "width: 100%; height: 50px; font-size: 2rem; font-weight: 300; padding-bottom: 3px; color: #999; background-color: #eee; line-height: 40px;", class: "btn btn-tag"
          .tag-meta
            %a{:href => "/tags/#{tag.name}", :style => "display: block; font-size: 1.3rem; border-radius: 2px; margin: 0 -2px 2px;", :class => "label label-default tag-list-number"}
              #{tag.taggings_count}
              %i Projects
