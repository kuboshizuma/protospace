.jumbotron
  .container.text-center
    = image_tag("header_logo.png", :alt => "PROTO TYPE - SHARE THE PROTOTYPE", :height => "73px")
.filter-nav
  .container
    .row
      %ul.nav.nav-pills.col-lg-11
        %li{role: "presentation", class: "#{'active' if type == 0}"}
          =link_to 'Popular PROTO', root_path
        %li{role: "presentation", class: "#{'active' if type == 1}"}
          =link_to 'Newest PROTO', newest_prototypes_path
      =link_to "View Tags", tags_path, class: "btn btn-default col-lg-1"
.container.proto-list
  .row
    -prototypes.each do |prototype|
      .col-sm-4.col-md-3.proto-content
        .thumbnail
          %a{:href => "/prototypes/#{prototype.id}"}
            = image_tag("#{prototype.prototype_images.first.image}")
          .caption
            %h3 #{prototype.title}
            .proto-meta
              .proto-user
                =link_to "by #{prototype.user.nickname}", user_path(prototype.user.id)
              .proto-posted
                =simple_time(prototype.updated_at)

            %ul.proto-tag-list.list-inline
              -prototype.tags.each do |tag|
                %li
                  =link_to "#{tag.name}", tag_path(tag.name), class: "btn btn-default"
.text-center
  =paginate(prototypes)
