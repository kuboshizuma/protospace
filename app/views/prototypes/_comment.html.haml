.media
  .media-left
    = link_to (image_tag comment.user.avator, width: "64px", height: "64px", alt: "#{comment.user.nickname}"), user_path(comment.user)
  .media-body
    %h4#top-aligned-media.media-heading
      = comment.user.nickname
      %a.anchorjs-link{:href => "#top-aligned-media"}
        %span.anchorjs-icon
    %p= comment.text
